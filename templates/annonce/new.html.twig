{% extends 'base.html.twig' %}

{% block title %}Création d'une annonce{% endblock %}

{% form_theme form 'annonce/_collection.html.twig' %}

{% block body %}

    <div class="container text-primary">
        {{ form_start(form) }}
        <div class="alert alert-dismissible alert-primary">
            <h2 class="text-center"><i class="far fa-address-card"></i>Informations générales de la nouvelle annonce</h2>
            <hr>
            <div class="row">
                <div class="col-6">
                    {{ form_row(form.title) }}
                </div>
                <div class="col-6">
                    {{ form_row(form.introduction) }}
                </div>
            </div>
            <div class="row">
                <div class="col-2">
                    {{ form_row(form.rooms) }}
                </div>
                <div class="col-2">
                    {{ form_row(form.price) }}
                </div>
            </div>
            <div class="row">
                <div class="col">
                    {{ form_row(form.photoCoverFile) }}
                </div>
                <div class="col">
                    {{ form_row(form.content) }}
                </div>
            </div>
            {{ form_row(form.images) }}
            <div class="alert alert-success clearfix mt-3 text-primary">
                <h2 class="alert-heading ">Enrengistrer mon annonce</h2>
                <p>Vous êtes sur le point de créer votre annonce !!!</p>
                <button class="btn btn-info float-right"><i class="fas fa-check"></i> Créer la nouvelle annonce</button>
            </div>
        {{ form_end(form) }}
        </div>
    </div>
{% endblock %}


