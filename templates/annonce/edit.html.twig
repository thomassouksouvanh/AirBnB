{% extends 'base.html.twig' %}

{% block title %}Modification d'une annonce{% endblock %}
    {% form_theme form 'annonce/_collection.html.twig' %}
{% block body %}
    <div class="container text-primary">
        <h1 class="text-center my-5">Modifier une annonce</h1>

        {{ form_start(form) }}
        <div class="row">
            <div class="col">
                <div class="alert alert-dismissible alert-primary">
                    <h2 class="text-center"><i class="far fa-address-card"></i> Informations générales</h2>
                    <hr>
                    {{ form_widget(form) }}
                </div>
            </div>
        </div>
        <div class="alert alert-success clearfix mt-3 text-white">
            <h2 class="alert-heading ">Enrengistrer mon annonce</h2>
            <p>Vous ếtes sur le point de modifier votre annonce !!!</p>
            <button class="btn btn-info float-right"><i class="fas fa-check"></i> Modifié l'annonce</button>
        </div>
        {{ form_end(form) }}
    </div>
{% endblock %}


