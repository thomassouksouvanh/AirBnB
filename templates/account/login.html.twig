{% extends 'base.html.twig' %}

{% block title %}Connexion au site{% endblock %}
{% block body %}
    <div class="container w-25 p-3 bg-light border border-info">
        <h1>Connexion</h1>
        <form action="{{ path('account_login') }}" method="POST">
            {% if hasError %}
                <div class="alert alert-danger">Une erreur est survenue, email ou mot de passe invalid</div>
            {% endif %}
            <div class="form-group">
                <label for="email">Email</label>
                <input type="text" name="_username" id="email" class="form-control" placeholder="Adresse mail..."
                       value="{{ username }}"> <!-- _username pour symfony -->
            </div>
            <div class="form-group">
                <label for="password">Mot de passe</label>
                <input type="password" name="_password" id="password" class="form-control"
                       placeholder="Mot de passe..."> <!-- _password pour symfony -->
            </div>
            <div class="form-group">
                <button type="submit" class="btn btn-info">Connexion</button>
            </div>
        </form>
    </div>
{% endblock %}
