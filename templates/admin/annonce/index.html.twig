{% extends 'admin/base.html.twig' %}

{% block title %}Administration des annonces!{% endblock %}

{% block body %}
<div class="container-fluid mt-3">
    <div class="alert text-center alert-dark" role="alert"><h1>Gestion des annonces par l'administrateur</h1></div>
    <table class="table table-striped  table-hover">
        <thead class="table-dark">
        <tr>
            <th scope="col">N° de l'annonce</th>
            <th scope="col">Titre</th>
            <th scope="col">Auteur</th>
            <th class="text-center" scope="col">Réservation</th>
            <th class="text-center" scope="col">Note</th>
            <th scope="col">Action</th>
        </tr>
        </thead>
        <tbody>
        <tr>
            {% for annonce in annonces %}
            <th scope="row">{{ annonce.id }}</th>
            <td>{{ annonce.title }}</td>
            <td><img class="avatar-medium mr-3" src="{{ annonce.author.picture }}" alt="avatar de {{ annonce.author.fullName }}">{{ annonce.author.fullName }}</td>
            <td class="text-center">{{ annonce.reservations | length }}</td>
            <td class="text-center">{{ annonce.avgRatings| number_format(1, ',',' ') }} / 5</td>
            <td>
                <a href="" class="btn btn-primary"><i class="fas fa-edit"></i></a>
                <a href="" class="btn btn-danger"><i class="fas fa-trash"></i></a>
            </td>
        </tr>
        {% endfor %}
        </tbody>
    </table>
</div>
{% endblock %}
